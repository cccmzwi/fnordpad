#!/bin/bash

# Kein Kommentar #

## Variablen
# Zielordner der Bilder
ordner=$HOME/bilder
# Adressen der soups
suppe=("http://fnordpad.soup.io/rss" "http://sixtus.soup.io/rss" "http://fotochaoten.soup.io/rss" "http://kochchaoten.soup.io/rss" "http://gnd.soup.io/rss")
# Name und Ort des parsers
parser=$HOME/parser

# Bilderordner anlegen, falls er nicht existiert
if [ ! -d "$ordner" ] ; then
    mkdir -p $ordner
fi

# alle Feeds parsen und speichern 
for ((i=0; i<=`echo ${#suppe[@]}`-1; i++))
do
    wget -P $ordner -c `$parser ${suppe[$i]}`
done

exit 0
