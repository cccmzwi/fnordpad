#!/bin/bash

# Kein Kommentar #

## Variablen
# Zielordner der Bilder
ordner=$HOME/bilder
# Adressen der soups
suppe=("http://fnordpad.soup.io/rss" "http://sixtus.soup.io/rss" "http://fotochaoten.soup.io/rss" "http://kochchaoten.soup.io/rss" "http://gnd.soup.io/rss")
# Name und Ort des Formatierscripts
format=$HOME/format

# Bilderordner anlegen, falls er nicht existiert
if [ ! -d "$ordner" ] ; then
    mkdir -p $ordner
fi

# alle Feeds parsen und speichern 
for ((i=0; i<=`echo ${#suppe[@]}`-1; i++))
do
    quellen=$format `echo ${suppe[$i]}` 
done

# Lasset curl in den richtigen Ordner speichern!
echo "cd $ordner" >> $load
while read -r $quellen; do
    curl -sfO $quellen
done

exit 0
